<h2 align="center">Sign up for free</h2>
<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <label>*First name</label>
      <%= f.text_field :first_name, :autofocus => true, class: 'form-control', placeholder: "E.g. John" %>
    </div>
    <div class="form-group">
      <label>*Last name</label>
      <%= f.text_field :last_name, :autofocus => true, class: 'form-control', placeholder: "E.g. Appleseed" %>
    </div>
    <div class="form-group">
      <label>*Email</label>
      <%= f.email_field :email, class: 'form-control', placeholder: "E.g. John@appleseed.com" %>
    </div>
    <div class="form-group">
      <label>*Password</label>
      <%= f.password_field :password, class: 'form-control', placeholder: "password" %>
    </div>
    <div class="form-group">
      <label>*Password_confirmation</label>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "confirm password" %>
    </div>
    <div class="form-group">
     <%= f.submit 'Sign up', :class => 'btn btn-block btn-primary' %>
    </div>
  <% end %>
</div>
